<div class="form-container">
    <div class="form-heading">Edit your profile</div>
    <form action="" method="post" id="edit-profile-form" class="auth-form">
        <label for="firstName">First Name</label>
        <input type="text" name="first" id="firstName" value="{{first}}" /><br
        />
        <label for="lastName">Last Name</label>
        <input type="text" name="last" id="lastName" value="{{last}}" /><br />
        <label for="email">Email Address</label>
        <input type="email" name="email" id="email" value="{{email}}" /><br />
        <label for="password">Password</label>
        <input type="password" name="password" id="password" /><br />
        <label for="age">Age</label>
        <input type="number" name="age" id="age" value="{{age}}" /><br />
        <label for="city">City</label>
        <input type="text" name="city" id="city" value="{{city}}" /><br />
        <label for="homepage">Homepage</label>
        <input type="text" name="url" id="homepage" value="{{url}}" /><br />
        <button type="submit" class="button-cta">Save</button>
    </form>
    {{#if editProfileError}}<h2>Uh oh, there was a problem, please try again...</h2>{{/if}}
</div>
<div class="form-container">
    <div class="form-heading">DANGER ZONE</div>
    <form action="/delete-signature" method="post" class="auth-form">
        <button type="submit" class="button-cta">DELETE SIGNATURE</button>
    </form>
    <form action="/delete-account" method="post" class="auth-form">
        <button type="submit" class="button-cta">DELETE ACCOUNT</button>
    </form>
</div>
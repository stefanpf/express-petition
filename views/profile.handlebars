{{> main-heading}}
<div class="form-container">
    {{> progress-bar-small}}
    <div class="form-heading">Optional information:</div>
    <form action="" method="post" id="register-form">
        <label for="age">Age</label>
        <input type="number" name="age" id="age" /><br />
        <label for="city">City</label>
        <input type="text" name="city" id="city" /><br />
        <label for="homepage">Homepage</label>
        <input type="text" name="url" id="homepage" /><br />
        <button type="submit" class="button-cta auth-button">Save & Continue</button>
    </form>
    {{#if profileError}}<h2>Uh oh, there was a problem, please try again...</h2>{{/if}}
</div>
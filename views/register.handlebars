{{> main-heading}}
<div class="form-container">
    {{> progress-bar-small}}
    <div class="form-heading">Register</div>
    <form action="" method="post" id="register-form" class="auth-form">
        <label for="firstName">First Name</label>
        <input type="text" name="firstName" id="firstName" required /><br />
        <label for="lastName">Last Name</label>
        <input type="text" name="lastName" id="lastName" required /><br />
        <label for="email">Email Address</label>
        <input type="email" name="email" id="email" required /><br />
        <label for="password">Password</label>
        <input type="password" name="password" id="password" required /><br />
        <button type="submit" class="button-cta">Sign now</button>
    </form>
    <div class="option-login">Already have an account? <a href="/login">Log in here!</a></div>
</div>
{{#if registrationError}}<h2>Uh oh, there was a problem, please try again...</h2>{{/if}}